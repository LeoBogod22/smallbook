<div class="container">
  <h2 class="text-center">Your Friendships</h2>
  <%current_user.all_friends.each do |friendship| x=1%>
    <div class="friend">
     <%= link_to user_path(friendship.friend.id) do %>
       <%= image_tag friendship.friend.avatar.url(:friend)%>
     <%end%>
      <span class="name<%=x%>"> <%= friendship.friend.full_name %></span>
     </div>
  <%end%>
</div>


<div class="container">
  <h2 class="text-center">Friendship Requests</h2>
  <%current_user.friend_requests.each do |request| %>
<%=image_tag request.respondee.avatar.url(:status)%>
<p><%=request.respondee.full_name%> would like to add you as a friend.</p>
 
<%end%>


</div>